<%- include("./template/header")%>
<link rel="stylesheet" href="/public/estilos.css">
<%- include("./template/navbar")%>
<br><br><br>
<section class="container mt-5 pt-5">
    <div class="row">
        <table class="table table-light table-striped table-hover table-bordered table-sm table-responsive-sm">
            <thead>
                <tr>
                    <th scope="col">Evento</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Plazas</th>
                    <th scope="col">Fecha del evento</th>
                </tr>
            </thead>
            <tbody>
                <% eventos.forEach(evento => {%>
                    <tr>
                        <td class=""><%= evento.nombre%></td>
                        <td class=""><%= evento.detalle%></td>
                        <td class=""><%= evento.plazas%></td>
                        <td class="d-flex align-items-center justify-content-center gap-3">
                            <%= evento.Fecha%>
                            <a href="/dashboard/event/<%= evento.id%>">
                                <button type="button" class="btn btn-dark">Ver más</button>
                            </a>
                        </td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</section>

<%- include("./template/footer")%>